{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": ".",
    "types": [
      "@playwright/test",
      "node"
    ]
  },
  "include": [
    "tests",
    "page",
    "component",
    "config",
    "utils",
    "data",
    "fixtures",
    "playwright.config.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "tabWidth": 4,
  "useTabs": false
}